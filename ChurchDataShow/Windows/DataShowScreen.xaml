<Window x:Class="ChurchDataShow.Windows.DataShowScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChurchDataShow.Windows"
        mc:Ignorable="d"
        Title="DataShowScreen" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" Initialized="Window_Initialized">
    <Grid>
        <Image Source="..\Images\Backgrounds\worship-hands-2.jpg" Stretch="Fill"></Image>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="0.1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                       TextAlignment="Center" TextWrapping="Wrap" FontSize="50" x:Name="tbTextos">
            </TextBlock>
        </Grid>
    </Grid>
</Window>
